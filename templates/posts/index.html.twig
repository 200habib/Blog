{% extends 'base.html.twig' %}

{% block title %}Blog Posts{% endblock %}

{% block body %}

{% include 'posts/_navbar/liste.html.twig' %}

<section class="bg-white dark:bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
        <h1 class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl text-white">Dai un'occhiata al nostro blog</h1>

        <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
            {% if posts is not empty %}
                {% for post in posts %}
                    <div class="lg:flex mb-6">
                        <img class="object-cover w-full h-56 rounded-lg lg:w-64" 
                             src="https://images.unsplash.com/photo-1624996379697-f01d168b1a52?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" 
                             alt="{{ post.title }}">

                        <div class="flex flex-col justify-between py-6 lg:mx-6">
                            <a href="{{ path('app_posts_show', {'id': post.id}) }}" 
                               class="text-xl font-semibold text-black hover:underline">
                                {{ post.title }}
                            </a>
                            
                            <span class="text-sm text-gray-500 dark:text-gray-300">
                                Pubblicato il: {{ post.createdAt|date('d F Y') }}
                            </span>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-lg text-center text-gray-500">Nessun post trovato.</p>
            {% endif %}
        </div>
    </div>
</section>

{% endblock %}
