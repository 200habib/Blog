{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} - Blog{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <!-- Title and Metadata -->
            <article class="blog-post">
                <header class="mb-4">
                    <h1 class="fw-bold">{{ post.title }}</h1>
                    <p class="text-muted">
                        Posted on {{ post.createdAt ? post.createdAt|date('F j, Y') : 'Unknown date' }} 

                    </p>
                </header>

                <!-- Post Body -->
                <section class="post-body mb-5">
                    <p class="fs-5">{{ post.body }}</p>
                </section>

                <!-- Tags -->
                <footer class="post-tags">
                    <h5 class="fw-bold">Tags:</h5>
                    <ul class="list-inline">
                        {% for tag in post.tags %}
                            <li class="list-inline-item">
                                <a href="{{ path('app_posts_by_tag', {'tagId': tag.id}) }}" class="badge bg-secondary text-decoration-none">
                                    {{ tag.name }}
                                </a>
                            </li>
                        {% else %}
                            <li class="list-inline-item text-muted">No tags</li>
                        {% endfor %}
                    </ul>
                </footer>
            </article>


{% if app.user and app.user.id == post.user.id %}
    <a href="{{ path('app_posts_edit', {'id': post.id}) }}" class="btn btn-primary">
        <i class="fas fa-edit"></i> Edit Post
    </a>
{% endif %}



            </div>
        </div>
    </div>
</div>
{% endblock %}
